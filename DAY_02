#include <Windows.h>
#include <stdio.h>

// 자료형 (DATA_TYPE)==> 1. 문자 2. 숫자 ==> 굉장히 중요한 역할!

void main(){

	// 문자 표현 방법==> 쌍따옴표

	printf("10+10"); printf("\n"); //==> print:10+10 연산이 되지않고 문자열로 취급해서 출력된다.

	//숫자 표현 방법 ==> "%d", 숫자 ==> %d 자리에 숫자가 표현된다.

	printf("%d", 10); printf("\n"); // %d 자리에 10이 삽입되어서 출력 
	printf("%d", 10+10); printf("\n"); // %d를 사용하면은 연산이 가능하다!
	printf("더하기: %d" , 10 + 3 ); printf("\n"); // 데코==> 변수를 명확하게 하기 위해서 
	printf("10+5 = %d", 10 + 5); printf("\n"); 



	// 빼기 -
	// 곱하기 *
	// 나누기 / ==> 몫

	// 문제 1) 빼기 곱하기 나누기를 출력해보세요. ( 10,3)

	printf("10 - 3 = %d",10 - 3); printf("\n");
	printf("10 * 3 = %d",10 * 3); printf("\n");
	printf("10 / 3 = %d",10 / 3); printf("\n");

	// 문제 2) 가로가 7, 세로가 4인 사각형의 넓이 출력
	
	printf("사각형의 넓이 = %d", 7 * 4); printf("\n");

	//문제 3) 위 길이의 삼각형 넓이 출력
	
	printf("삼각형의 넓이 = %d", (7 * 4) / 2); printf("\n");

	// 문제 4) 성적이 30,40,50을 받았다 총점, 평균 출력
	
	printf("총점 = %d", 30 + 40 + 50); printf("\n");
	printf("평균 = %d", (30 + 40 + 50) / 3); printf("\n");

	system("pause");
}
